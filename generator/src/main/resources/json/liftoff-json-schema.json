{
  "$comment": "See 'JSON Schema Mappings' in IntelliJ to apply schema as a validator.",
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "type": "object",
  "properties": {
    "liftoff-json-version": {
      "type": "number",
      "$comment": "We want integers, so this is an initial attempt. '1.0' is still valid, though.",
      "multipleOf": 1
    },
    "basic": {
      "type": "object",
      "properties": {
        "project-name": {
          "type": "string"
        },
        "core-package": {
          "type": "string"
        },
        "main-class": {
          "type": "string"
        },
        "android-sdk-path": {
          "type": "string"
        }
      }
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "android",
          "core",
          "desktop-legacy",
          "headless",
          "html",
          "ios",
          "lwjgl3",
          "server",
          "shared"
        ]
      }
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string",
            "enum": [
              "scala",
              "kotlin",
              "groovy"
            ]
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "extensions": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "ashley",
          "box2d-lights",
          "ai",
          "box2d",
          "bullet",
          "controllers",
          "freetype",
          "tools"
        ]
      }
    },
    "third-party": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "library": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "versions": {
      "type": "object",
      "properties": {
        "libgdx": {
          "type": "string"
        },
        "java": {
          "type": "string"
        },
        "android-plugin": {
          "type": "string"
        },
        "android-target-api": {
          "type": "number",
          "$comment": "We want integers, so this is an initial attempt. '1.0' is still valid, though.",
          "multipleOf": 1
        },
        "gwt-plugin": {
          "type": "string"
        },
        "application": {
          "type": "string"
        },
        "server-java": {
          "type": "string"
        },
        "desktop-java": {
          "type": "string"
        },
        "robovm": {
          "type": "string"
        }
      }
    },
    "add-ons": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "readme",
          "gui-assets",
          "gradle-wrapper"
        ]
      }
    },
    "template": {
      "type": "string",
      "enum": [
        "application-adapter",
        "application-listener",
        "classic",
        "empty",
        "game",
        "input-processor",
        "scene2d",
        "autumn-mvc-basic",
        "autumn-mvc-box2d-visui",
        "autumn-mvc-visui",
        "kiwi-input-aware-application-listener",
        "kiwi-abstract-application-listener",
        "lml-basic",
        "noise4j",
        "visui-basic",
        "visui-showcase",
        "websocket-basic"
      ]
    },
    "post-generation-gradle-task": {
      "type": "string"
    }
  },
  "required": [
    "liftoff-json-version",
    "basic",
    "platforms"
  ],
  "additionalProperties": false
}